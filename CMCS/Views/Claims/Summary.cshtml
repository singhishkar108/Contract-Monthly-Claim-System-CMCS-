@model CMCS.Models.Claims
@{
    ViewData["Title"] = "Summary of Claim";
}

<h2 class="text-center mb-4">Summary of Claim</h2>

<div class="claims-summary-container">
    <div class="col-md-12">
        <div class="card shadow-sm p-4">
            <p><strong>Lecturer ID:</strong> @Model.LecturerID</p>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <p><strong>Claim ID:</strong> @Model.Id</p>
            <p><strong>Claim Period:</strong> @Model.ClaimsPeriodStart.ToShortDateString() - @Model.ClaimsPeriodEnd.ToShortDateString()</p>
            <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
            <p><strong>Rate per Hour:</strong> @Model.RatePerHour</p>
            <p><strong>Total Amount: R</strong> @Model.TotalAmount</p>
            <p><strong>Description of Work:</strong> @Model.DescriptionOfWork</p>
            <p><strong>Status:</strong> @Model.ClaimStatus</p>
            <p><strong>Date Submitted:</strong> @Model.DateSubmitted.ToShortDateString()</p>
            @if (Model.SupportingDocuments != null)
            {
                <p><strong>Supporting Documents:</strong></p>
                <p><a href="@Url.Action("FileDownload", "Claims", new { id = Model.Id })" class="btn btn-outline-success">Download</a></p>

            }
            <p>

            </p>
            <div class="text-center">
                <div class="row justify-content-center">
                    <div class="col-md-4 text-center mb-2 mx-3">
                        <a href="@Url.Action("Claims", "Claims")" class="btn btn-primary w-100">Return to Submit a Claim</a>
                    </div>
                    <div class="col-md-4 text-center mx-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary w-100">Home</a>
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>
